<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý nhân sự</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
   .container {
       max-width:100%;
   }
        .carousel-inner > .item > img, .carousel-inner > .item > a > img {
            display: block;
            height: auto;
            max-height: 60rem;
            max-width: 100%;
            line-height: 1;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top he">
        @*<div class="navbar navbar-default navbar-fixed-top">*@
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Quản lý nhân sự", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav" >
                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer class="">

                <p>&copy; @DateTime.Now.Year - Quản lý nhân sự
                    <img style="max-width: 4rem;max-height: 4rem;float: right;margin-right:2rem" src="~/Content/images/logo.png" alt="nature"></p>
           
    
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
